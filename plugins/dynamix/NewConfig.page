function prepareNewConfig(form) {
  // Return preset as single line input
  var preset = '';
  for (var i=1,item; item=form.preset.options[i]; i++) {
    if (item.selected) {
      if (preset.length) preset += ',';
      preset += item.value;
      item.selected = false;
    }
  }
  item = form.preset.options[0];
  item.value = preset;
  item.selected = true;
}
