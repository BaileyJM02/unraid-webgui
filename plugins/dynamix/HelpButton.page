<script>
function HelpButton() {
  if ($('#nav-item.HelpButton').toggleClass('active').hasClass('active')) {
    $('.inline_help').show('slow');
    $.cookie('help','help',{path:'/'});
  } else {
    $('.inline_help').hide('slow');
    $.removeCookie('help',{path:'/'});
  }
}
</script>